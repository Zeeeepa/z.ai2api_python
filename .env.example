# ========================================
# Z.AI2API - Environment Configuration
# ========================================

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false
ANONYMOUS_MODE=true

# ========================================
# Provider Credentials
# ========================================

# Z.AI Provider
ZAI_EMAIL=your_zai_email@example.com
ZAI_PASSWORD=your_zai_password

# K2Think Provider
K2THINK_EMAIL=your_k2think_email@example.com
K2THINK_PASSWORD=your_k2think_password

# Qwen Provider
QWEN_EMAIL=your_qwen_email@example.com
QWEN_PASSWORD=your_qwen_password

# ========================================
# FlareProx Configuration (Optional)
# Enables unlimited scalability via Cloudflare Workers
# ========================================

# Enable FlareProx for IP rotation and scalability
FLAREPROX_ENABLED=true

# Cloudflare API Credentials
# Get these from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=eae82cf159577a8838cc83612104c09c5a0d6
CLOUDFLARE_ACCOUNT_ID=2b2a1d3effa7f7fe4fe2a8c4e48681e3

# FlareProx Settings
FLAREPROX_PROXY_COUNT=3  # Number of proxy endpoints to create
FLAREPROX_AUTO_ROTATE=true  # Auto-rotate through proxies
FLAREPROX_ROTATE_INTERVAL=100  # Requests before rotating

# ========================================
# Advanced Configuration (Optional)
# ========================================

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Authentication
API_KEY=  # Optional API key for protected access
ENABLE_AUTH=false

# Provider URLs (Override defaults if needed)
ZAI_LOGIN_URL=https://chat.z.ai/auth
ZAI_CHAT_URL=https://chat.z.ai

K2THINK_LOGIN_URL=https://www.k2think.ai/login
K2THINK_CHAT_URL=https://www.k2think.ai/chat

QWEN_LOGIN_URL=https://chat.qwen.ai/auth?action=signin
QWEN_CHAT_URL=https://chat.qwen.ai
